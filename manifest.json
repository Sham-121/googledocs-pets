{
    "manifest_version": 3,
    "name": "Google Docs Pet",
    "version": "1.0",
    "description": "A cute virtual pet that moves around Google Docs!",
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/document/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["media/dog/*/*.gif"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
    "default_popup": "popup.html"
  }
  
  }
  